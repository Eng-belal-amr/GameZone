@model IEnumerable<GameZone.Models.Game>

<h2>Games</h2>

<a asp-action="Create" class="btn btn-secondary mb-3">Add Game</a>

@if (!Model.Any())
{
    <div class="alert alert-warning">No games available!</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Name</th>
                <th>Category</th>
                <th>Devices</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var game in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/@game.Cover" alt="@game.Name" class="img-fluid" />



                    </td>
                    <td>@game.Name</td>
                    <td>@game.Category.Name</td>
                    <td>
                        @foreach(var gd in game.Devices)
                        {
                            <span class="badge bg-info">@gd.Device.Name</span>
                        }
                    </td>
                    <td>
                        <a href="javascript:void(0);" class="btn btn-danger js-delete" data-id="@game.Id">
    <i class="bi bi-trash3"></i> Delete
</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $(".js-delete").click(function(){
                if (!confirm("Are you sure you want to delete this game?")) return;

                var btn = $(this);
                var gameId = btn.data("id");

                $.ajax({
                    url: '/Games/Delete/' + gameId,
                    type: 'POST',
                    success: function(result){
                        if(result.success){
                            btn.closest("tr").fadeOut(300, function(){ $(this).remove(); });
                        } else {
                            alert("Failed to delete game!");
                        }
                    },
                    error: function(){
                        alert("Error deleting game!");
                    }
                });
            });
        });
    </script>
}