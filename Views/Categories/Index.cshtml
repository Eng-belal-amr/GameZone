@model IEnumerable<GameZone.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Categories Dashboard</h2>
        <a asp-action="Create" class="btn btn-primary shadow-lg d-flex align-items-center gap-2 px-3 py-2">
            <i class="bi bi-plus-circle"></i> Add Category
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm mt-5">
            <h4 class="alert-heading">No categories!</h4>
            <p class="mb-0">No categories were added yet.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var category in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card category-card h-100 shadow-sm rounded-3">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@category.Name</h5>
                            <p class="card-text text-muted">
                                @(string.IsNullOrWhiteSpace(category.Description) ? "No description" : category.Description)
                            </p>
                            <span class="badge bg-secondary rounded-pill mb-2">
                                @category.Games.Count game(s)
                            </span>

                            <div class="d-flex justify-content-center gap-2 mt-3">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm px-3">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm px-3">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
