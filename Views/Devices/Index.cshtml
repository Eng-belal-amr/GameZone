@model IEnumerable<GameZone.Models.Device>

@{
    ViewData["Title"] = "Devices";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">Devices Dashboard</h2>
        <a asp-action="Create" class="btn btn-success shadow-lg d-flex align-items-center gap-2 px-3 py-2">
            <i class="bi bi-plus-circle"></i> Add Device
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm mt-5">
            <h4 class="alert-heading">No devices!</h4>
            <p class="mb-0">No devices were added yet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive mt-4">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-success">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Games Count</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var device in Model)
                    {
                        <tr>
                            <td>@device.Name</td>
                            <td>@device.Description</td>
                            <td>@device.Games.Count</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@device.Id" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@device.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
